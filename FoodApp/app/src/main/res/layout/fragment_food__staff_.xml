<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical"
    tools:context=".Fagment_Staff.Food_Staff_Fragment">

    <ListView
        android:id="@+id/lv_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="17dp"
        android:background="#FFFFFF"
        tools:listitem="@layout/iteam_food_menu_staff" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginBottom="80dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_addfood"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="+ add new food"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="13.5dp"
            android:background="@drawable/shape_button2"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_removefood"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:text="- remove food"
            android:layout_margin="10dp"
            android:textColor="@color/white"
            android:textSize="13.5dp"
            android:background="@drawable/shape_button2"/>


    </LinearLayout>



</LinearLayout>