<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E6E5E5"
    android:orientation="vertical"
    tools:context=".Fragment.HomePage_Fragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.SearchView
            android:id="@+id/sv_foods"
            android:layout_width="235dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:layout_marginLeft="15dp"
            android:background="@drawable/shape_search"
            android:iconifiedByDefault="false"
            app:queryHint="Seacrch foods"
            />

        <ImageView
            android:id="@+id/img_phone"
            android:src="@drawable/icphone"
            android:layout_width="33dp"
            android:layout_height="30dp"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"/>

        <ImageView
            android:id="@+id/img_cart"
            android:src="@drawable/iccart"
            android:layout_width="33dp"
            android:layout_height="33dp"
            android:layout_weight="1"
            />


    </LinearLayout>


    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/banner_home"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đồ ăn"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewFoods"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layoutDirection="ltr"
                tools:listitem="@layout/item_food"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đồ uống"
                android:textSize="20dp"
                android:textColor="#000"
                android:layout_marginLeft="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewDrinks"
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:orientation="horizontal"
                android:scrollbars="horizontal"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                android:layoutDirection="ltr"
                tools:listitem="@layout/item_drink"/>
            <ImageView
                android:layout_marginTop="8dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/offer"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>