<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#EDEDED"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:gravity="center"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/ic_back"
            android:layout_gravity="start"
            android:layout_marginLeft="15dp"
            />

        <ImageView
            android:id="@+id/img_addfood"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/ic_addimg"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload image"
            android:textColor="#EA4335"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/rouded_listview"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Add a new Food"
            android:textColor="#000000"
            android:textSize="24dp"
            android:textStyle="bold"
            android:layout_margin="15dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food name"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edt_foodname"
            android:hint="Food you want to add"
            android:layout_margin="15dp"
            android:background="@drawable/shape_dittext"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edt_foodcategory"
            android:hint="This dish goes under which Food"
            android:layout_margin="15dp"
            android:background="@drawable/shape_dittext"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Food price"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edt_foodprice"
            android:hint="Food you want to add"
            android:layout_margin="15dp"
            android:background="@drawable/shape_dittext"
            android:padding="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:textColor="@color/black"
            android:layout_marginLeft="15dp"
            android:textStyle="bold"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:id="@+id/edt_fooddescription"
            android:hint="Food you want to add"
            android:layout_margin="15dp"
            android:background="@drawable/shape_dittext"
            android:padding="10dp"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_addtolist"
            android:layout_width="130dp"
            android:layout_height="40dp"
            android:text="+ add to list"
            android:layout_margin="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/white"
            android:textSize="13.5dp"
            android:background="@drawable/shape_button2"/>
    </LinearLayout>







</LinearLayout>